<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="style.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Mongoose Dashboard</title>
</head>

<body>
    <div class="container">

        <nav id="nav" class="navbar navbar-expand-lg navbar-light bg-light">
            <h1>Mongoose Dashboard Primates</h1>
        </nav>

        <h5>Primate Info:</h5>
        <a href="/primates/new" class="badge badge-primary">Create New Primate</a>

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Color</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Origin</th>
                </tr>
            </thead>
            <tbody>
                <% for (const primate of primates) { %>
                    <tr>
                        <td>
                            <a href="primates/<%= primate._id %>">
                                <%= primate.name %>
                            </a>
                        </td>
                        <td>
                            <%= primate.color %>
                        </td>
                        <td>
                            <%= primate.weight %>
                        </td>
                        <td>
                            <%= primate.origin %>
                        </td>
                        <td>
                            <a class="btn btn-outline-primary btn-sm" href="primates/<%= primate._id %>/edit/" role="button">Edit</a>
                        </td>
                        <td>
                            <form action="primates/<%= primate._id %>/delete" method='post'>
                                <input class="btn btn-outline-danger btn-sm" type="submit" value="Delete">
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>
